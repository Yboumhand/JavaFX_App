<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>


<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.venteanalystfx.Controllers.User.VisualizeReusltsController"
      spacing="10" prefWidth="900" prefHeight="700">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <VBox spacing="5">
        <Label text="Sales Data Visualization" styleClass="heading"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>

            <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="End Date:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <DatePicker fx:id="endDatePicker" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

            <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" maxWidth="Infinity"/>

            <Label text="Chart Type:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <ComboBox fx:id="chartTypeComboBox" GridPane.columnIndex="3" GridPane.rowIndex="1" maxWidth="Infinity"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Aggregation:"/>
            <ComboBox fx:id="aggregationComboBox" minWidth="150"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="refreshButton" text="Refresh Charts" styleClass="primary-button"/>
        </HBox>

        <Label fx:id="statusLabel" styleClass="status-label"/>
    </VBox>

    <TabPane fx:id="chartTabPane" VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Bar Chart">
            <StackPane fx:id="barChartContainer" VBox.vgrow="ALWAYS"/>
        </Tab>
        <Tab text="Pie Chart">
            <StackPane fx:id="pieChartContainer" VBox.vgrow="ALWAYS"/>
        </Tab>
        <Tab text="Line Chart">
            <StackPane fx:id="lineChartContainer" VBox.vgrow="ALWAYS"/>
        </Tab>
        <Tab text="Scatter Chart">
            <StackPane fx:id="scatterChartContainer" VBox.vgrow="ALWAYS"/>
        </Tab>
        <Tab text="Area Chart">
            <StackPane fx:id="areaChartContainer" VBox.vgrow="ALWAYS"/>
        </Tab>
    </TabPane>
</VBox>