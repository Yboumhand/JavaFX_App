<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.venteanalystfx.Controllers.User.DataProcessController"
            prefWidth="800" prefHeight="600">

    <VBox spacing="10" padding="10">
        <Label text="Sales Data Analysis" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <HBox spacing="10" padding="10">
            <Label text="Sales by Category:"/>
            <ComboBox fx:id="categoryComboBox"/>
            <Button text="Search"/>
        </HBox>

        <Label fx:id="totalSalesLabel" text="Total Sales: " />

        <Label fx:id="mostSoldLabel" text="Most Sold Product: " />
        <Label fx:id="mostExpensiveLabel" text="Most Expensive Product: " />
        <Label fx:id="cheapestLabel" text="Cheapest Product: " />

        <BarChart fx:id="monthlySalesChart" title="Monthly Sales" prefHeight="300">
            <xAxis>
                <CategoryAxis label="Month"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Total Amount"/>
            </yAxis>
        </BarChart>
    </VBox>
</AnchorPane>